import pygame
import pytmx
import pyscroll
from player import Player
from network import Network


#creation de la fenetre 
width = 480
height = 480
pygame.init()


class Game:

    def __init__(self):
       #Creation de la fenetre du jeu
       self.screen = pygame.display.set_mode((width,height))
       pygame.display.set_caption("Jeu en 2D")
       
       #chargement de la carte
       tmx_data = pytmx.util_pygame.load_pygame('carte.tmx')
       map_data = pyscroll.data.TiledMapData(tmx_data)
       map_layer = pyscroll.orthographic.BufferedRenderer(map_data,self.screen.get_size())

       #generer un joueur
       #player_position = tmx_data.get_object_by_name("player")
       #self.player = Player(player_position.x,player_position.y)
       #self.player = Player(20, 30)
       self.players = []

       #définir une liste d'obsctale
       self.obstacles = []
       for obj in tmx_data.objects:
          if obj.type == "collision":
             self.obstacles.append(pygame.Rect(obj.x,obj.y,obj.width, obj.height))
       #dessiner le groupe de calques
       self.group = pyscroll.PyscrollGroup(map_layer=map_layer, default_layer=4)
       self.group.add(self.player)
          
    def update(self):
       self.group.update()
       
       #vérification de collision
       for sprite in self.group.sprites():
          if sprite.feet.collidelist(self.obstacles) > -1:
              sprite.move_back()

    def add_player(self, player_data):
        new_player = Player(player_data)
        self.players.append(new_player)

def genere_players(self, players_data):
    # 清除现有玩家列表，为新的玩家数据做准备
    self.players.clear()

    for player_info in players_data:
        # 创建新的玩家实例
        new_player = Player(player_info['x'], player_info['y'], player_info['image'])
        # 将新玩家添加到玩家列表中
        self.players.append(new_player)

    # 确保更新玩家渲染组
    self.group.empty()  # 清除旧的精灵组
    for player in self.players:
        self.group.add(player.sprite)  # 假设每个玩家对象有一个sprite属性

    def run(self):
        clock = pygame.time.Clock()
        running = True
        n = Network()
        p = n.getP()

        while running:
           self.player.save_location()
           self.handle_input()
           self.update()
           self.group.center(self.player.rect.center)
           #self.group.draw(self.screen)
           self.group.draw(self.screen)
           p2 = n.send(p)
           self.genere_players(p, p2)
           pygame.display.flip()

           for event in pygame.event.get():
               if event.type == pygame.QUIT:
                 running = False
            
           clock.tick(60)
        pygame.quit()
