import socket
import pickle


class Network:
    def __init__(self):
        self.client = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
        self.server = ""
        self.port = 5555
        self.addr = (self.server, self.port)
        #self.players = self.connect()
        self.player_id, self.players = self.connect()

    def getP(self):
        return self.players

    def connect(self):
        try:
            self.client.connect(self.addr)
            player_id = pickle.loads(self.client.recv(2048))  # Recevoir d’abord l’ID du joueur
            players = pickle.loads(self.client.recv(2048))  # Recevoir ensuite la liste des joueurs
            #return pickle.loads(self.client.recv(2048))
            return player_id, players
        except Exception as e:
            print(e)

    def send(self, data):
        try:
            self.client.send(pickle.dumps(data))
            return pickle.loads(self.client.recv(2048))
        except socket.error as e:
            print(e)
